# Maintainer: MartiMcFly martimcfly@autorisation.de

pkgname=zarafa-libvmime
pkgver=0.9.2
pkgrel=1
pkgdesc="A C++ class library for working with MIME messages"
arch=('any')
url="http://www.vmime.org/"
license=('GPL')
depends=('gsasl' 'gnutls')
makedepends=('')
source=("http://download.zarafa.com/community/final/7.1/7.1.7-42779/sourcecode/libvmime-0.9.2+svn603.tar.bz2"
	"http://download.zarafa.com/community/final/7.1/7.1.7-42779/sourcecode/vmime-patches/vmime-0.9.2-header-value-on-next-line.diff"
	"http://download.zarafa.com/community/final/7.1/7.1.7-42779/sourcecode/vmime-patches/vmime-0.9.2-phf-stop-on-whitespace.diff"
	"http://download.zarafa.com/community/final/7.1/7.1.7-42779/sourcecode/vmime-patches/vmime-0.9.2-qp-in-buffers.diff"
	"http://download.zarafa.com/community/final/7.1/7.1.7-42779/sourcecode/vmime-patches/vmime-mixed-qp-in-parameter.diff")
md5sums=('0ba65ad889488b2f851d7f028bfb6e9e'
         'f9d915f576d55caf1c175f85fe96572c'
         '37a434db82cb5baded6aa89ebd1800bd'
         'b0b3260d88899c5aeff74aad86186602'
         '29651f18632f71f93e2ca7d1284c718b')
build() {
        cd $srcdir/libvmime-${pkgver}
	patch -p1 <../vmime-0.9.2-header-value-on-next-line.diff
	patch -p1 <../vmime-0.9.2-phf-stop-on-whitespace.diff
	patch -p1 <../vmime-0.9.2-qp-in-buffers.diff
	patch -p1 <../vmime-mixed-qp-in-parameter.diff

	./configure --disable-debug \
		--enable-sasl \
		--enable-ssl \
		--enable-tls\
		--enable-platform-posix \
		--enable-messaging \
		--enable-messaging-proto-pop3 \
		--enable-messaging-proto-smtp \
		--enable-messaging-proto-imap \
		--enable-messaging-proto-maildir \
		--enable-messaging-proto-sendmail \
		--prefix=$pkgdir/usr
	make && make install
        #scons prefix=$pkgdir/usr install  || return 1
}
